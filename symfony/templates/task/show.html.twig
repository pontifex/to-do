{% extends 'base.html.twig' %}

{% block body_id 'task_show' %}

{% block main %}
    <h1>{{ task.title }}</h1>

    <p class="task-metadata">
        <span class="metadata"><i class="fa fa-calendar"></i> {{ task.publishedAt|date('Y-m-d H:i:s') }}</span>
    </p>

    {{ task.description|md2html }}
    {{ 'status.attribute'|trans }}: {{ task.status|trans }}

    {% if task.status != 'Completed' %}
        <button id="update-task">{{ 'label.set.completed'|trans }}</button>
    {% endif %}
{% endblock %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}

{% if task.status != 'Completed' %}
    {% block javascripts %}
        {{ parent() }}
        <script>
            $("#update-task").click(function() {
                that = $(this);
                $.ajax({
                    url:'{{ (path('task_update_status', {taskId: task.id})) }}',
                    type: 'PATCH',
                    dataType: 'json',
                    data: {'status': 'Completed'},
                    async: true,
                    success: function (data)
                    {
                        $('#update-task').toggle();

                    }
                });
                return false;
            });
        </script>
    {% endblock %}
{% endif %}
